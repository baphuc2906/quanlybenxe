<div class="wrap-admin container-fluid">
    <div class="opacity-background">

    </div>
    <div class="login-block">
        <h3 class="login-title">admin login</h3>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group" id="account" method="post">
            <section>
                <form id="account" method="post">
                    <div class="form-group">
                        <label asp-for="Input.User" style="color:white!important;"></label>
                        <input asp-for="Input.User" class="form-control" />
                        @*<div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>*@
                        <span asp-validation-for="Input.User" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" style="color:white!important;"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        @* <input type="password" class="form-control" name="" id="" placeholder="password" asp-for="Input.Password">*@
                        @*<div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>*@
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="row align-items-center remember" style="padding:0px 20px;">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="form-group" style="padding:20px 20px;">
                        <input type="submit" value="Login" class="btn float-right login_btn">
                    </div>
                </form>
            </section>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-center">
                Don't have an account?
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="links"> Sign Up</a>
                @* <a href="#" class="links"> Sign Up</a>*@
            </div>
            <div class="d-flex justify-content-center">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="links">Forgot your password?</a>
                </p>
            </div>
        </div>
    </div>
