                            <div class="input-group">
                                <label for="" class="label">Từ:</label>
                                <input type="text" class="form-control mx-auto my-auto" name="" id="" placeholder="Điểm bắt đầu" list="diembatdau">
                                <datalist id="diembatdau">
                                    <option value="Da Nang"></option>
                                    <option value="Quang Nam"></option>
